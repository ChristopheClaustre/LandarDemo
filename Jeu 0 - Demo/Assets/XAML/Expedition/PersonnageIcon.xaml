<UserControl
        x:Class="Noesis.PersonnageIcon"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Noesis"
        mc:Ignorable="d" Height="auto" Width="auto">
    <Grid>
        <Grid.ColumnDefinitions>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
        </Grid.RowDefinitions>

        <Image Source="{StaticResource SoldierIcon}" Visibility="{Binding IsASoldier, Converter={StaticResource BoolToVisConverter}}"/>
        <Image Source="{StaticResource EngineerIcon}" Visibility="{Binding IsAnEngineer, Converter={StaticResource BoolToVisConverter}}"/>
        <Image Source="{StaticResource WorkerIcon}" Visibility="{Binding IsAWorker, Converter={StaticResource BoolToVisConverter}}"/>

    </Grid>
</UserControl>
